{% extends "base.html.twig" %}

{% block title %}My Shop - SingleProduct{% endblock %}

{% block body %}

{% if product %}
<div class="card">
  <div class="card-body d-flex justify-content-between align-items-center ">
    <div class="w-30">
      <div class="d-flex px-2 py-1 align-items-center">
        <div>
          <img src="{{ asset(ca) }}" alt="Country flag">
        </div>
        <div class="ms-4">
          <p class="text-xs font-weight-bold mb-0">Product Name:</p>
          <h6 class="text-sm mb-0 text-capitalize">{{ product.name }}</h6>
        </div>
      </div>
    </div>
    <div class="w-10">
      <div>
        <p class="text-xs font-weight-bold mb-0">Stock:</p>
        <h6 class="text-sm mb-0">{{ product.stock }}</h6>
      </div>
    </div>
    <div class="w-10">
      <div>
        <p class="text-xs font-weight-bold mb-0">Price:</p>
        <h6 class="text-sm mb-0">${{ product.price }}</h6>
      </div>
    </div>
    <div class="align-middle text-sm w-30">
      <div class="col text-center">
        <p class="text-xs font-weight-bold mb-0">Description:</p>
        <h6 class="text-sm mb-0">{{ product.description|length > 20 ? product.description|slice(0, 20) ~ '...' : product.description  }}</h6>
      </div>
    </div>
    <div class="w-20">
      <div class="ms-auto text-end">
        <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="/myShop/public/products/delete/{{ product.id }}"><i class="far fa-trash-alt me-2"></i>Delete</a>
        <a class="btn btn-link text-white opacity-8 px-3 mb-0" href="/myShop/public/products/edit/{{ product. id }}"><i class="fas fa-pencil-alt text-white opacity-8 me-2" aria-hidden="true"></i>Edit</a>
      </div>
    </div>
  </div>
</div>
{% endif %}

{% endblock %}